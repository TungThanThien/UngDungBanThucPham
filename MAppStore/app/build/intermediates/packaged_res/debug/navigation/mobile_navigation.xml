<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mappstore.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.mappstore.ui.profile.ProfileFragment"
        android:label="@string/Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_category"
        android:name="com.example.mappstore.ui.category.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/offersFragment"
        android:name="com.example.mappstore.OfferFragment"
        android:label="fragment_offers"
        tools:layout="@layout/fragment_offers" />
    <fragment
        android:id="@+id/newProductsFragment"
        android:name="com.example.mappstore.NewProductsFragment"
        android:label="fragment_new_products"
        tools:layout="@layout/fragment_new_products" />
    <fragment
        android:id="@+id/myOrdersFragment"
        android:name="com.example.mappstore.MyOrdersFragment"
        android:label="fragment_my_orders"
        tools:layout="@layout/fragment_my_orders" />
    <fragment
        android:id="@+id/myCartsFragment"
        android:name="com.example.mappstore.MyCartsFragment"
        android:label="fragment_my_carts"
        tools:layout="@layout/fragment_my_carts" />
    <activity
        android:id="@+id/registrationActivity"
        android:name="com.example.mappstore.activities.RegistrationActivity"
        android:label="activity_registration"
        tools:layout="@layout/activity_registration" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.mappstore.activities.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
</navigation>